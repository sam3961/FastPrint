<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.category.aboutus.AboutusActivity">

    <RelativeLayout
        android:id="@+id/layoutActionBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorActionBar">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:padding="@dimen/_5ssp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="About us"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14ssp"
            android:visibility="visible" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutActionBar"
        android:overScrollMode="never">

        <RelativeLayout
            android:id="@+id/layoutRelative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_15sdp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imgAboutus"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:scaleType="fitXY" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/tvHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgAboutus"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHeading"
                android:layout_marginBottom="@dimen/_7sdp"
                android:text="Director"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14ssp" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/tvDirector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/director"
                android:layout_marginBottom="@dimen/_7sdp"
                android:text=""
                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/deputydirector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDirector"
                android:layout_marginBottom="@dimen/_7sdp"
                android:text="Deputy Director"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14ssp" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/tvDeputyDirector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deputydirector"
                android:layout_marginBottom="@dimen/_7sdp"
                android:text=""
                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/_12ssp" />

            <ImageView
                android:id="@+id/imgLinkden"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_below="@+id/tvDeputyDirector"
                android:layout_marginBottom="@dimen/_7sdp" />

            <TextView
                android:id="@+id/founded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgLinkden"
                android:layout_marginBottom="@dimen/_7sdp"
                android:text="Founded : "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/tvfounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgLinkden"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_toRightOf="@+id/founded"
                android:text=""
                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/ourMission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvfounded"
                android:layout_marginBottom="@dimen/_7sdp"
                android:text="Our Mission"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14ssp" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/tvourMission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ourMission"
                android:layout_marginBottom="@dimen/_7sdp"
                android:text=""
                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/ourVision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvourMission"
                android:layout_marginBottom="@dimen/_7sdp"
                android:text="Our Vision"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14ssp" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/tvourVision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ourVision"
                android:layout_marginBottom="@dimen/_7sdp"
                android:text=""
                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/ourPromise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvourVision"
                android:layout_marginBottom="@dimen/_7sdp"
                android:text="Our Promise"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14ssp" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/tvourPromise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ourPromise"
                android:layout_marginBottom="@dimen/_7sdp"
                android:text=""
                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/ourProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvourPromise"
                android:layout_marginBottom="@dimen/_7sdp"
                android:text="Our Product"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14ssp" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/tvourProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ourProduct"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text=""
                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/_12ssp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>