                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/bg_card">

                    <com.williamww.silkysignature.views.SignaturePad
                        android:id="@+id/signature_pad"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        app:penColor="@android:color/black"></com.williamww.silkysignature.views.SignaturePad>

                    <TextView
                        android:id="@+id/tvSignatureHere"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/signature_here"
                        android:textColor="@color/colorTextGrey"
                        android:textSize="@dimen/_18ssp" />

                    <ImageView
                        android:id="@+id/imgClear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/_12sdp"
                        android:src="@drawable/ic_clear"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/bg_buynow"
                    android:gravity="center"
                    android:padding="@dimen/_12sdp"
                    android:text="Submit"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>